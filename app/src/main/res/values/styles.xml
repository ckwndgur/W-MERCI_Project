<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BlankTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="WhiteAccentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="TextTheme" parent="android:Widget.TextView">
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">25dip</item>
        <item name="android:layout_marginRight">25dip</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/primary_dark_button</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="TransparentButtonTheme" parent="ButtonTheme">
        <item name="android:background">@drawable/transparent_button</item>
        <item name="android:colorButtonNormal">@color/colorTransparent</item>
    </style>

    <style name="EditTextTheme" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorLighterWhite</item>
        <item name="android:textCursorDrawable">@drawable/white_cursor</item>
        <item name="android:background">@drawable/default_edit_text</item>
        <item name="android:layout_marginBottom">15dip</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHighlight">@color/colorDarkGrey</item>
    </style>

    <style name="ButtonActionBarButtonTheme" parent="Widget.AppCompat.ActionButton">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonDialogTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="background">@color/colorTransparent</item>
        <item name="android:colorButtonNormal">@color/colorWhite</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AssessmentBriefTypeIconTheme" parent="TextTheme">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_marginRight">14dip</item>
        <item name="android:paddingTop">1dip</item>
    </style>

    <style name="AssessmentBriefContentIconTheme" parent="TextTheme">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">3dip</item>
        <item name="android:layout_marginRight">3dip</item>
        <item name="android:paddingTop">3dip</item>
    </style>

    <style name="TextNormalTheme" parent="android:Widget.TextView">
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">25dip</item>
        <item name="android:layout_marginRight">25dip</item>
    </style>

    <style name="ButtonListViewTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:background">@drawable/list_view_button</item>
        <item name="android:colorButtonNormal">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorBlackListView</item>
        <item name="android:padding">16dip</item>
        <item name="android:gravity">left|center_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">0dip</item>
    </style>
</resources>
