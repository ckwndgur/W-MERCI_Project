<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="true"
        android:state_enabled="true">
        <layer-list>
            <item android:top="-10dip" android:left="-10dip" android:right="-10dip">
                <shape android:shape="rectangle">

                    <stroke android:width="2dip" android:color="@color/colorWhite" />
                    <padding android:bottom="8dip" android:left="8dp" android:right="8dip" android:top="8dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:state_enabled="true">
        <layer-list>
            <item android:top="-10dip" android:left="-10dip" android:right="-10dip">
                <shape android:shape="rectangle">

                    <stroke android:width="1dip" android:color="@color/colorLighterWhite" />
                    <padding android:bottom="5dip" android:left="5dp" android:right="5dip" android:top="5dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>